<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
    <name>PLG_SYSTEM_XMLSITEMAP</name>
    <author>Bionic Laboratories BLG GmbH</author>
    <creationDate>December 2025</creationDate>
    <copyright>Copyright (C) 2024 Bionic Laboratories BLG GmbH. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>info@bionic-world.net</authorEmail>
    <authorUrl>https://www.bionic-world.net</authorUrl>
    <version>3.4.0</version>
    <description>PLG_SYSTEM_XMLSITEMAP_XML_DESCRIPTION</description>

    <files>
        <filename plugin="xmlsitemap">xmlsitemap.php</filename>
    </files>

    <languages folder="language">
        <language tag="de-DE">de-DE/plg_system_xmlsitemap.ini</language>
        <language tag="de-DE">de-DE/plg_system_xmlsitemap.sys.ini</language>
        <language tag="en-GB">en-GB/plg_system_xmlsitemap.ini</language>
        <language tag="en-GB">en-GB/plg_system_xmlsitemap.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="include_menu"
                    type="radio"
                    label="PLG_SYSTEM_XMLSITEMAP_INCLUDE_MENU"
                    description="PLG_SYSTEM_XMLSITEMAP_INCLUDE_MENU_DESC"
                    default="1"
                    class="btn-group"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field
                    name="include_articles"
                    type="radio"
                    label="PLG_SYSTEM_XMLSITEMAP_INCLUDE_ARTICLES"
                    description="PLG_SYSTEM_XMLSITEMAP_INCLUDE_ARTICLES_DESC"
                    default="1"
                    class="btn-group"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field
                    name="include_categories"
                    type="radio"
                    label="PLG_SYSTEM_XMLSITEMAP_INCLUDE_CATEGORIES"
                    description="PLG_SYSTEM_XMLSITEMAP_INCLUDE_CATEGORIES_DESC"
                    default="1"
                    class="btn-group"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>

    <updateservers>
        <!-- Optional: Add your update server here -->
    </updateservers>
</extension>
